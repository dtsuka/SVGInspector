{
  "name": "svg-inspector",
  "displayName": "SVG Inspector",
  "description": "Visual SVG Editor for VS Code",
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.90.0"
  },
  "publisher": "dtsuka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dtsuka/SVGInspector.git"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "svg-inspector.editor",
        "displayName": "SVG Inspector",
        "selector": [
          {
            "filenamePattern": "*.svg"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "svg-inspector.openPreview",
        "title": "SVG Inspector: Open Preview",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "svg-inspector.openPreview",
          "when": "resourceLangId == svg || resourceLangId == xml || resourceExtname == .svg",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "svg-inspector.openPreview",
          "when": "resourceLangId == svg || resourceLangId == xml || resourceExtname == .svg",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build:webview": "cd webview-ui && pnpm install && pnpm run build",
    "package": "mkdir -p dist && npx vsce package --out ./dist"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
